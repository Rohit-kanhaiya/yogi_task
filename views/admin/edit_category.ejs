<%- include('navbar.ejs') %>
<form action="/admin/update_category" method="post" enctype="multipart/form-data">
<div class="container-fluid bg-white p-3 shadow">
    <div class="row">
        <div class="col-md-12">
            <h3 style="text-align: center;">Edit Category</h3>
        </div>
        <div class="col-md-6">
            Category name
            <input type="text" name="category_name" class="form-control" value="<%=category_info.category_name%>">
            <input type="hidden" name="category_id" class="form-control" value="<%=category_info.category_id%>">
        </div>
       
        <div class="col-md-6">
            category sequence
            <input type="text" name="category_sequence" class="form-control" value="<%=category_info.category_sequence%>">
        </div>
        <div class="col-md-3">
            Image
            <input type="file" accept="image/*" name="category_image" class="form-control">
        </div>
        <div class="col-md-1">
          <img src="/uploads/<%=category_info.category_image%>" height="100%" width="100%">
        </div>
        <div class="col-md-3">
          Status
          <select class="form-control" name="category_status">
            <option readonly disabled>Choose</option>
            <option value="active">Active</option>
            <option value="inactive">Inactive</option>
          </select>
      </div>
        <div class="col-md-12 text-center"> 
            <button style="margin-top: 20px;" class="btn btn-primary">Update</button>
        </div>
        </div>
    </div>
</div>
</form>

<%- include('footer.ejs') %>