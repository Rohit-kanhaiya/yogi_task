<%- include('navbar.ejs') %>
<form action="/admin/add_product" method="post" enctype="multipart/form-data">
<div class="container-fluid bg-white p-3 shadow">
    <div class="row">
        <div class="col-md-12">
            <h3 style="text-align: center;">Add Product</h3>
        </div>
        <div class="col-md-4">
           Category name
          <select class="form-control" name="category_name">
            <option disabled>Choose</option>
            <%for(var i=0;i<category_info.length;i++){%>
            <option value="<%=category_info[i].category_name%>"><%=category_info[i].category_name%></option>
            <%}%>
          </select>      
      </div>
        <div class="col-md-4">
            Sub Category name
            <select class="form-control" name="subcategory_name">
              <option disabled>Choose</option>
              <%for(var i=0;i<subcategory_info.length;i++){%>
              <option value="<%=subcategory_info[i].subcategory_name%>"><%=subcategory_info[i].subcategory_name%></option>
              <%}%>
            </select> 
            
        </div>
       
        <div class="col-md-4">
            Product Name
            <input type="text" name="product_name" class="form-control" required>
        </div>
        <div class="col-md-5">
            Image
            <input type="file" accept="image/*" name="product_image" class="form-control" required>
        </div>
        <div class="col-md-12 text-center"> 
            <button style="margin-top: 20px;" class="btn btn-primary">save</button>
        </div>


        </div>
    </div>
</div>
</form>

<%- include('footer.ejs') %>